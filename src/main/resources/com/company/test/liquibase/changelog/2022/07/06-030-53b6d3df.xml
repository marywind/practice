<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Test">
        <createTable tableName="DEALS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DEALS"/>
            </column>
            <column name="DEAL_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="RETURN_DATE_EXPECTED" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="RETURN_DATE_ACTUAL" type="DATE"/>
            <column name="CLIENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="CAR_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Test">
        <addForeignKeyConstraint baseColumnNames="CAR_ID" baseTableName="DEALS" constraintName="FK_DEALS_ON_CAR"
                                 referencedColumnNames="ID" referencedTableName="CARS"/>

        <createIndex indexName="IDX_DEALS_CAR_ID" tableName="DEALS">
            <column name="CAR_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="3" author="Test">
        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="DEALS" constraintName="FK_DEALS_ON_CLIENT"
                                 referencedColumnNames="ID" referencedTableName="CLIENTS"/>

        <createIndex indexName="IDX_DEALS_CLIENT_ID" tableName="DEALS">
            <column name="CLIENT_ID"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>