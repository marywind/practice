<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Test">
        <createTable tableName="CAR">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CAR"/>
            </column>
            <column name="MODEL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Test">
        <createTable tableName="CLIENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CLIENT"/>
            </column>
            <column name="FULL_NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CAR_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Test">
        <addForeignKeyConstraint baseColumnNames="CAR_ID" baseTableName="CLIENT" constraintName="FK_CLIENT_ON_CAR"
                                 referencedColumnNames="ID" referencedTableName="CAR"/>
    </changeSet>
</databaseChangeLog>