<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://carsBrowse.caption"
        focusComponent="carsesTable">
    <data readOnly="true">
        <collection id="carsesDc"
                    class="com.company.test.entity.Cars">
            <fetchPlan extends="_base"/>
            <loader id="carsesDl">
                <query>
                    <![CDATA[select e from Cars e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="carsesTable" spacing="true">
        <filter id="filter"
                dataLoader="carsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="carsesTable"
                    width="100%"
                    dataContainer="carsesDc"
                    multiselect="true">
            <actions>
                <action id="add" type="add"/>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="mark"/>
                <column id="type"/>
                <column id="cost"/>
                <column id="rent_cost"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="addBtn" action="carsesTable.add"/>
                <button id="createBtn" action="carsesTable.create"/>
                <button id="editBtn" action="carsesTable.edit"/>
                <button id="refreshBtn" action="carsesTable.refresh"/>
                <button id="removeBtn" action="carsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
